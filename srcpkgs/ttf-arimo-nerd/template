# Template file for 'ttf-arimo-nerd'
pkgname=ttf-arimo-nerd
version=3.4.0
revision=1
hostmakedepends="tar xz"
depends="font-util"
short_desc="Patched font Arimo from nerd fonts library"
maintainer="VanillaDaFur <SnowyDaFur@protonmail.com>"
license="MIT"

font_file="Arimo"
homepage="https://github.com/ryanoasis/nerd-fonts"
distfiles="https://github.com/ryanoasis/nerd-fonts/releases/download/v${version}/${font_file}.tar.xz"
checksum=006464de19502bd49a72265058811665b62b823509bbbd2e7181ba87046b6b08

do_install() {
	mkdir -p "${DESTDIR}/usr/share/fonts/TTF"
  tar -xf "${XBPS_SRCDISTDIR}/${pkgname}-${version}/${font_file}.tar.xz" \
    -C "${DESTDIR}/usr/share/fonts/TTF"
}
